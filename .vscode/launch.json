// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Run Extension + LSP",
            "configurations": [
                "Run Extension Only",
                "Attach to LSP Only"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Run Extension Only",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/dist/vscode-extension"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/vscode-extension/out/**/*.js"
            ],
            "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to LSP Only",
            "port": 6009,
            "restart": true,
            "outFiles": [
                "${workspaceRoot}/dist/vscode-extension/out/lsp-server.js"
            ]
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/dist/vscode-extension",
                "--extensionTestsPath=${workspaceFolder}/dist/vscode-extension/out/test/suite/index"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/vscode-extension/out/test/**/*.js"
            ],
            "preLaunchTask": "${defaultBuildTask}"
        }
    ]
}
