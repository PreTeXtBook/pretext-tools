{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "outDir": "out",
    "lib": ["es2022", "WebWorker"],
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "format": ["packages/format/src/index.ts"]
    }
  },
  "exclude": ["node_modules", ".vscode-test"],
  "references": []
}
