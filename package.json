{
  "name": "pretext-tools-monorepo",
  "displayName": "PreTeXt-tools-monorepo",
  "description": "Monorepo for PreTeXt tools",
  "version": "0.0.1",
  "license": "See license in LICENSE",
  "publisher": "oscarlevin",
  "repository": "https://github.com/oscarlevin/pretext-tools",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "vscode:prepublish": "npm run build:all",
    "build:extension": "npm run --workspace=vscode-extension esbuild -- --sourcemap",
    "build:visual-editor": "npm run --workspace=visual-editor build",
    "build:prettier-plugin": "npm run --workspace=prettier-plugin-pretext build:raw",
    "build:all": "npm run build:prettier-plugin && npm run build:visual-editor && npm run build:extension",
    "watch:extension": "npm run --workspace=vscode-extension watch",
    "watch:visual-editor": "npm run --workspace=visual-editor watch",
    "watch:all": "npm-run-all --parallel watch:extension watch:visual-editor",
    "lint": "eslint packages/ --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "22.x",
    "@types/prettier": "^2.7.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/vscode": "^1.89.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "@vitejs/plugin-react": "^4.4.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.1.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.12.0",
    "mocha": "^10.7.3",
    "npm-run-all": "^4.1.5",
    "ovsx": "^0.10.3",
    "sass-embedded": "^1.87.0",
    "typescript": "^5.6.3",
    "vite": "^6.3.4",
    "vite-plugin-dts": "^4.5.3"
  },
  "dependencies": {
    "@lezer/xml": "^1.0.5",
    "@tiptap/extension-hard-break": "^3.0.0-beta.4",
    "@tiptap/extension-text": "^3.0.0-beta.4",
    "@unified-latex/unified-latex": "^1.8.2",
    "@unified-latex/unified-latex-to-hast": "^1.8.2",
    "@unified-latex/unified-latex-to-pretext": "^1.8.2",
    "@unified-latex/unified-latex-util-html-like": "^1.8.0",
    "@unified-latex/unified-latex-util-parse": "^1.8.2",
    "deepmerge": "^4.3.1",
    "esbuild-node-externals": "^1.18.0",
    "frankenmarkup": "github:oscarlevin/FrankenMarkUp",
    "fs.promises.exists": "^1.1.4",
    "glob": "^11.0.2",
    "md2ptx": "github:skiadas/md2ptx",
    "prettier": "^2.8.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "rehype-stringify": "^10.0.1",
    "saxes": "^6.0.0",
    "time-stamp": "^2.2.0",
    "unified": "^11.0.5",
    "unist-util-remove": "^4.0.0",
    "unist-util-visit": "^5.0.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.0.8",
    "xast-util-from-xml": "^4.0.0",
    "xast-util-to-string": "^3.0.0",
    "xast-util-to-xml": "^4.0.0",
    "xml2js": "^0.6.2"
  },
  "prettier": {
    "tabWidth": 2
  }
}
